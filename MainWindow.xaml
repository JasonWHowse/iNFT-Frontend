<Window x:Class="iNFT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iNFT"
        mc:Ignorable="d"
        Title="iNFT" Height="450" Width="800" MinHeight="450" MinWidth="800" ResizeMode="CanMinimize">
    <Grid x:Name="MainGrid" Background="LightGray">
        <TextBox HorizontalAlignment="Center" Height="20" Margin="0,-360,0,0" TextWrapping="NoWrap" VerticalAlignment="Center" Width="440" x:Name="FileNameTextBox" TextChanged="FileNameTextBox_TextChanged"/>
        <Button x:Name="BrowseButton" Content="Browse" HorizontalAlignment="Center" Margin="600,-360,0,0" VerticalAlignment="Center" Click="BrowseButton_Click"  Width="120" Height="20"/>
        <Image x:Name="ImageNFTDisplay" Height="310 " Width="720" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,60,0,0"/>
        <TextBlock x:Name="TextNFTDisplay" Background="AliceBlue" HorizontalAlignment="Center" Margin="0,60,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Height="310" Width="720"/>
        <ComboBox x:Name="NFTComboBox" HorizontalAlignment="Center" Margin="600,-300,0,0" VerticalAlignment="Center"  Width="120" Height="20" SelectionChanged="NFTComboBox_SelectionChanged"/>
        <Button x:Name="MintButton" Content="Mint Button" HorizontalAlignment="Center" Margin="0,-300,0,0" VerticalAlignment="Center" Click="Mint_Button_Click"  Width="120" Height="20"/>
        <Button x:Name="TransferButton" Content="Transfer Button" HorizontalAlignment="Center" Margin="320,-300,0,0" VerticalAlignment="Center" Click="Transfer_Button_Click"  Width="120" Height="20"/>
        <Button x:Name="LogoutButton" Content="Logout" HorizontalAlignment="Center" Margin="-600,-360,0,0" VerticalAlignment="Center" Click="Logout_Button_Click"  Width="120" Height="20"/>
        <TextBox x:Name="FilePathTextBox" HorizontalAlignment="Center" Margin="-600,-300,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Height="20" IsReadOnly="True"/>
        <Button x:Name="CopytoClipboardButton" Content="Copy to Clipboard" Margin="-320,-300,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Height="20" Click="Copy_to_Clipboard_Click"/>


        <Label x:Name="UserNamePublicKeyLabel" Content="Public Key"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="80" Margin="-280,-120,0,0"/>
        <Label x:Name="UserNamePrivateKeyLabel" Content="Private Key" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="80" Margin="-280,-40,0,0"/>
        <Label x:Name="PasswordKeyLabel" Content="Password"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="80" Margin="-280,40,0,0"/>
        <TextBox x:Name="UsernamePublicKeyTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="260" Margin="90,-120,0,0"/>
        <PasswordBox x:Name="UsernamePrivateKeyTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="260" Margin="90,-40,0,0" PasswordChar="*"/>
        <PasswordBox x:Name="PasswordKeyTextBox"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="260" Margin="90,40,0,0" PasswordChar="*"/>
        <Button x:Name="LoginButton" Height="20" Width="120" Margin="0,120,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Login" Click="Login_Click"/>
    </Grid>
</Window>
